@model IEnumerable<MediaBin.Models.File>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="/@item.FileName">@Html.DisplayFor(modelItem => item.FileName)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.FileName">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.FileName">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.FileName">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
